@model TSMbank.Models.CardRequest
@using  TSMbank.Models;
@{
    ViewBag.Title = "CreditCardReqDetails";
}

<div class="panel panel-default u-margin-top-small">
    <div class="panel-heading">Card Activation Request</div>
    <div class="panel-body">
        <p><label>Request id:</label><span>@Model.Id</span></p>
        <p><label>Customer Id:</label><span>@Model.IndividualId</span></p>
        <p><label>Customer Name:</label><span>@Model.Individual.FullName</span></p>
        <p><label>Card Type:</label><span>@Model.CardType</span></p>
        <p><label>Transaction Amount Limit:</label><span>@Model.TransactionAmountLimit</span></p>
        <p><label>Credit Limit:</label><span>@Model.CreditLimit</span></p>
        @Html.ActionLink("Approve", "Handle", "Requests", new { id = Model.Id, requestStatus = RequestStatus.Approved }, new { @class = "btn btn-primary" })
        @Html.ActionLink("Reject", "Handle", "Requests", new { id = Model.Id, requestStatus = RequestStatus.Rejected }, new { @class = "btn btn-primary u-margin-left-small" })
    </div>
</div>