@model TSMbank.ViewModels.CustomerViewFormModel
@using TSMbank.ViewModels;
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Customer</h2>
@using (Html.BeginForm("Save", "Customers"))
{
    @Html.HiddenFor(c => c.CustomerId)
    @Html.HiddenFor(m => m.ModificationAction)
    if (Model.ModificationAction == ModificationAction.NewCustomer || Model.ModificationAction == ModificationAction.EditCustomer)
    {
        <div class="form-group">
            <table>
                <tr>
                    <td>
                        @Html.LabelFor(m => m.Customer.FirstName)
                        @Html.TextBoxFor(m => m.Customer.FirstName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Customer.FirstName)
                    </td>
                    <td>
                        @Html.LabelFor(m => m.Customer.LastName)
                        @Html.TextBoxFor(m => m.Customer.LastName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Customer.LastName)
                    </td>
                    <td>
                        @Html.LabelFor(m => m.Customer.FatherName)
                        @Html.TextBoxFor(m => m.Customer.FatherName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Customer.FatherName)
                    </td>
                </tr>
            </table>
        </div>
        <div class="form-group">
            <table>
                <tr>
                    <td>
                        @Html.LabelFor(m => m.Customer.SSN)
                        @Html.TextBoxFor(m => m.Customer.SSN, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Customer.SSN)
                    </td>
                    <td>
                        @Html.LabelFor(m => m.Customer.VatNumber)
                        @Html.TextBoxFor(m => m.Customer.VatNumber, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Customer.VatNumber)
                    </td>
                    <td>
                        @Html.LabelFor(m => m.Customer.IdentificationCardNo)
                        @Html.TextBoxFor(m => m.Customer.IdentificationCardNo, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Customer.IdentificationCardNo)
                    </td>
                </tr>
            </table>
        </div>

        <div class="form-group">
            <table>
                <tr>
                    <td>
                        @Html.LabelFor(m => m.Customer.DateOfBirth)
                        @Html.TextBoxFor(m => m.Customer.DateOfBirth, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Customer.DateOfBirth)
                    </td>
                    <td>
                        @Html.LabelFor(m => m.Customer.Email)
                        @Html.TextBoxFor(m => m.Customer.Email, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Customer.Email)
                    </td>
                </tr>
            </table>

        </div>
    }
    if (Model.ModificationAction == ModificationAction.NewCustomer || Model.ModificationAction == ModificationAction.EditAddress)
    {
        <div class="form-group">
            <table>
                <tr>
                    <td>
                        @Html.LabelFor(m => m.Address.Street)
                        @Html.TextBoxFor(m => m.Address.Street, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Address.Street)
                    </td>
                    <td>
                        @Html.LabelFor(m => m.Address.StreetNumber)
                        @Html.TextBoxFor(m => m.Address.StreetNumber, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Address.StreetNumber)
                    </td>
                    <td>
                        @Html.LabelFor(m => m.Address.Region)
                        @Html.TextBoxFor(m => m.Address.Region, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Address.Region)
                    </td>

                </tr>
            </table>
        </div>
        <div class="form-group">
            <table>
                <tr>
                    <td>
                        @Html.LabelFor(m => m.Address.City)
                        @Html.TextBoxFor(m => m.Address.City, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Address.City)
                    </td>
                    <td>
                        @Html.LabelFor(m => m.Address.Country)
                        @Html.TextBoxFor(m => m.Address.Country, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Address.Country)
                    </td>
                    <td>
                        @Html.LabelFor(m => m.Address.PostalCode)
                        @Html.TextBoxFor(m => m.Address.PostalCode, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Address.PostalCode)
                    </td>
                </tr>
            </table>
        </div>
    }
    if (Model.ModificationAction == ModificationAction.NewCustomer || Model.ModificationAction == ModificationAction.EditPhone)
    {
        <div class="form-group">
            <table>
                <tr>
                    <td>
                        @Html.LabelFor(m => m.Phone.CountryCode)
                        @Html.TextBoxFor(m => m.Phone.CountryCode, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Phone.CountryCode)
                    </td>
                    <td>
                        @Html.LabelFor(m => m.Phone.PhoneType)
                        @Html.EnumDropDownListFor(m => m.Phone.PhoneType, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Phone.PhoneType)
                    </td>
                    <td>
                        @Html.LabelFor(m => m.Phone.PhoneNumber)
                        @Html.TextBoxFor(m => m.Phone.PhoneNumber, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Phone.PhoneNumber)
                    </td>
                </tr>
            </table>
        </div>
    }

    <button type="submit" class="btn btn-primary">Save</button>


}

