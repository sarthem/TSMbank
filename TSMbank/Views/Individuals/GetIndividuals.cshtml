@model IEnumerable<TSMbank.Models.Individual>
@using TSMbank.ViewModels;

@{
    ViewBag.Title = "GetIndividuals";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Customers</h2>
@if (!Model.Any())
{
    <p>We dont have any Customers</p>
}
else
{
    <table id="customers" class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Full Name</th>
                <th>Father's Name</th>
                <th>Accounts</th>
                <th>Address</th>
                <th>Phone Numbers</th>

            </tr>
        </thead>
        @foreach (var individual in Model)
        {
            <tr>
                <td>@Html.ActionLink(individual.FullName, "Details", "Individuals", new { id = individual.Id }, null)</td>
                <td>@individual.FathersName</td>
                <td>
                    @if (!individual.BankAccounts.Any())
                    {
                        <p>No related Accounts</p>
                        <p>@Html.ActionLink("Add new account", "New", "BankAccounts", new { individualId = individual.Id }, new { @class = "link-grey" })</p>
                    }
                    else
                    {
                        foreach (var account in individual.BankAccounts)
                        {
                            <p>@Html.ActionLink(account.IBAN, "Edit", "BankAccounts", new { accountNo = account.AccountNumber }, null)</p>

                        }
                        <p>@Html.ActionLink("Add new account", "New", "BankAccounts", new { individualId = individual.Id }, new { @class = "link-grey" })</p>

                    }
                </td>
                <td>@Html.ActionLink(individual.PrimaryAddress.FullAddress, "Edit", "Individuals", new { id = individual.Id, modify = (int)ModificationAction.EditAddresses }, null)</td>
                <td>
                    @foreach (var phone in individual.Phones)
                    {
                        <p>@Html.ActionLink(phone.CallingNumber, "Edit", "Individuals", new { id = individual.Id, modify = (int)ModificationAction.EditPhones }, null) (@phone.PhoneType)</p>
                    }
                </td>
            </tr>
        }
    </table>
}
<p>
    @Html.ActionLink("New Customer", "New", "Individuals", null, new { @class = "btn btn-primary" })
</p>
