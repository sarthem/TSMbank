            $("#creditAccIban").change(function () {
                if ($(this).val() == "") {
                    $("#creditAccNo").attr("disabled", false);
                } else {
                    $("#creditAccNo").attr("disabled", true);
                }
            });

            $("#creditAccNo").change(function () {
                if ($(this).val() == "") {
                    $("#creditAccIban").attr("disabled", false);
